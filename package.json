{
  "name": "@antv/lark-map",
  "version": "0.0.1-alpha.1",
  "description": "A React toolkit for geospatial visualization based on L7",
  "license": "MIT",
  "main": "dist/lib/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/lark-map.min.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "dumi dev",
    "lint": "run-p lint:*",
    "lint:ts": "eslint src __tests__ --ext .ts,.tsx",
    "lint:style": "stylelint --fix src/**/*.less",
    "prettier": "prettier --write 'src/*.{tsx,ts,md,json}'",
    "lint-fix": "eslint src __tests__ --fix --ext .ts,.tsx --format=pretty && npm run lint:style",
    "test": "jest",
    "test-cover": "jest --coverage",
    "clean": "rimraf dist",
    "size": "limit-size",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/lib",
    "build:esm": "tsc -p tsconfig.build.json --module ESNext --outDir dist/esm",
    "build:umd": "father-build --clean=false && npm run size",
    "build": "npm run clean && npm run build:umd && run-p build:cjs build:esm",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "ci": "run-s lint test-cover build",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^26.0.24",
    "@umijs/fabric": "^2.10.2",
    "dumi": "^1.1.40",
    "eslint-plugin-import": "^2.26.0",
    "father-build": "^1.22.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "limit-size": "^0.1.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "lint-staged": {
    "*.less": "stylelint --fix",
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "limit-size": [
    {
      "path": "dist/umd/lark-map.min.js",
      "limit": "500b",
      "gzip": true
    },
    {
      "path": "dist/umd/lark-map.min.js",
      "limit": "1 Kb"
    }
  ],
  "keywords": [
    "antv",
    "l7",
    "lark map"
  ],
  "author": {
    "name": "AntV",
    "url": "https://antv.vision/"
  },
  "homepage": "https://larkmap.antv.vision",
  "repository": {
    "type": "git",
    "url": "https://github.com/antvis/LarkMap"
  },
  "bugs": {
    "url": "https://github.com/antvis/LarkMap/issues"
  }
}
